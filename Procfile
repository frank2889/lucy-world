web: echo "========== DEPLOY PHASE DEBUG ==========" && echo "Deploy timestamp: $(date '+%Y-%m-%d %H:%M:%S %Z')" && echo "Working dir: $(pwd)" && echo "PORT: $PORT" && echo "Python: $(python3 --version)" && echo "Testing wsgi import..." && python3 -c "import sys; sys.path.insert(0, '.'); from scripts.wsgi import app; print('âœ“ Import successful')" && echo "Starting gunicorn..." && echo "========================================" && python3 -m gunicorn scripts.wsgi:app --bind 0.0.0.0:$PORT --workers 2 --log-level info
