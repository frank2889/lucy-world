# Environment variables for production
FLASK_ENV=production
FLASK_APP=app.py
PORT=8000

# Security
SECRET_KEY=your-secret-key-here

# API Keys (add your actual keys here)
# GOOGLE_API_KEY=your-google-api-key
# BING_API_KEY=your-bing-api-key
# GSC_TYPE=service_account
# GSC_PROJECT_ID=your-gcp-project-id
# GSC_PRIVATE_KEY_ID=your-private-key-id
# GSC_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# GSC_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
# GSC_CLIENT_ID=your-service-account-client-id
# GSC_AUTH_URI=https://accounts.google.com/o/oauth2/auth
# GSC_TOKEN_URI=https://oauth2.googleapis.com/token
# GSC_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
# GSC_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account
# GSC_UNIVERSE_DOMAIN=googleapis.com

# Stripe Billing & Tax
# STRIPE_PUBLISHABLE_KEY=pk_live_xxx
# STRIPE_SECRET_KEY=<stripe_secret_key>
# STRIPE_WEBHOOK_SECRET=whsec_xxx
# STRIPE_PRICE_PRO=price_xxx
# STRIPE_PRICE_PRO_USAGE=price_xxx  # optional usage-based add-on

# Email (magic link delivery) - Configure on server only, never commit real credentials!
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=marketing@lucy.world
SMTP_PASSWORD=your-google-app-password-here
SMTP_FROM=no-reply@lucy.world
SMTP_REPLY_TO=support@lucy.world
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost/lucyworld

# Logging
LOG_LEVEL=INFO

# Feature flags
ENABLE_ADVANCED_FEATURES=true
ENABLE_FREE_FEATURES=true

# Caching controls
CACHE_DISABLED=true
